= render 'shared/nav'
=render :layout => 'shared/form_layout' do
  .row
    .col-xs-12.text-center#new-media
      %h1 Invite User to Evrystep
  .row.p-top-40
    .col-xs-12.col-md-6.col-md-offset-3
      =form_for :claim_users, url: {action: :create} do |f|
        .form-group
          =f.label :email
          =f.text_field :email, :placeholder => 'Enter user email', class: "form-control"
        = f.submit 'Send', class: 'btn btn-info w-100'
