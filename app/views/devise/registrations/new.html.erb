<br><br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'well form-horizontal' }) do |f| %>

  <fieldset>
    <h2 style="text-align: center">Sign up for evrystep!</h2><br>

    <div class="form-group">
      <div class="controls">
        <%= f.label :first_name, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :last_name, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>

    <div class="form-group">  
      <div class="controls">
        <%= f.label :email, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, :autofocus => true, :class => 'form-control input-lg' %>
        </div>
      </div>  
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :password, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>

<!--     <div class="form-group">
      <div class="controls">
        <%#= f.label :password_confirmation, "Confirm password", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%#= f.password_field :password_confirmation, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div> -->

    <div class="form-actions">
      <%= f.submit "Sign up", :class => 'btn btn-danger btn-lg' %>
    </div>

  </fieldset>
<% end %>

<div style="text-align:center">
  <%= render "devise/shared/links" %>
</div>