<br><br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>

  <fieldset>
    <div style="text-align: center" class="h2 no-top-margin">Sign up for evrystep!</div>

    <div class="form-group">  
      <div class="controls">
        <%= f.label :email, "Email *", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, :autofocus => true, :class => 'form-control input-lg' %>
        </div>
      </div>  
    </div>

    <div class="form-group">  
      <div class="controls">
        <%= f.label :claim_email, "Claim Email *", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :claim_email, :class => 'form-control input-lg' %>
        </div>
      </div>  
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :password, "Password *", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => 'must be at least 8 characters' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :first_name, "First name *", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :last_name, "Last name *", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>

    <%= f.hidden_field :claim_token, value: "#{SecureRandom.hex}" %>
    <div class="form-actions">
      <%= f.submit "Sign up", :class => 'btn btn-info btn-lg' %>
    </div>

  </fieldset>
<% end %>

<div style="text-align:center">
  <%#= render "devise/shared/links" %>
</div>