<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'well form-horizontal' }) do |f| %>

  <fieldset>
    <h2 style="text-align: center">Sign in</h2><br>

    <div class="form-group">  
      <div class="controls">
        <%= f.label :email, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, :class => 'form-control input-lg' %>
        </div>
      </div>  
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :password, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :class => 'form-control input-lg', :autocomplete => "off" %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <%= f.submit "Sign in", :class => 'btn btn-danger btn-lg' %>
    </div>

  </fieldset>
<% end %>

<div class="form-actions">
  <%= render "devise/shared/links" %>
</div>
