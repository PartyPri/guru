<div class="panel panel-default">
	<div class="panel-body">
	<div class="row">
		<div class="col-md-3">
			<div id="join">
			  <% if user_signed_in? %>
			  	<%= button_to "Join", user_interests_path(id: @interest), method: :post, class:"btn btn-danger btn-sm" %>
			  <% end %>
			  <%#= @users.count %> <!--members-->
			</div>
			<!--<div>
				<%#= image_tag "waacking_thumbnail.jpg" %>
			</div>
