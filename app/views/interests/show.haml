.hero-image{style: "background-image: url(#{@interest.cover_photo.url(:large)});"}
  .hero
    = render 'shared/nav'
    .container.p-y-100.text-center{style: "height: 300px;"}
.container.p-y-40
  .row.text-center
    .col-lg-12
      %h1.hero-text.p-bottom-5= @interest.name
      -# APRIL: Custom interest quote to go here
      %h4= @interest.description
      -# APRIL: Custom interest quote attribution to go here
      %h5= @interest.quote_author
  / .row.text-center.p-top-20
  /   .col-xs-12
  /     %ul.list-inline
  /       %li
  /         %h5
  /           %a Reels
  /       %li.divider
  /       %li
  /         %h5
  /           %a About
  /       %li.divider
  /       %li
  /         %h5
  /           %a Followers
.container.text-center.m-top-40{style: "height: 1px; background-color: #cccccc;"}
  %span{style: "background-color: white; position: relative; top: -30px;"}
    -#%button.btn.btn-primary.btn-large Follow
.container.p-y-20{role: "tabpanel"}
  .row.text-right.m-bottom-30
    .col-xs-12
      %ul.list-inline
        %li.active
          %a{href: "#reels", role: "tab", "data-toggle" => "tab"} Reels
        %li
          %a{href: "#timeline", role: "tab", "data-toggle" => "tab"} Timeline
.tab-content
  .container.tab-pane#timeline{role: "tabpanel"}
    .row
      = render partial: 'shared/timeline', locals: { reels: @reels }
  .container.tab-pane.active#reels{role: "tabpanel"}
    - @reels.each do |reel|
      .row.p-top-20
        .col-xs-12
          %h3= link_to(reel.name, "/reels/#{reel.id}")
          %span= link_to("by" + " " + reel.user.first_name + " " + reel.user.last_name, reel.user)
          - interest = reel.interests
          - length = interest.length
          %ul.list-inline
            - interest.each_with_index do |interest, x|
              - if x+1 != length
                %li
                  = link_to(interest.name, "/interests/#{interest.id}/about")
                %li.divider
              - else
                %li
                  = link_to(interest.name, "/interests/#{interest.id}/about")
      .row.p-top-20.text-center
        .col-xs-12x
          %div.reel-carousel
            = render partial: 'shared/reel', locals: { reel: reel }