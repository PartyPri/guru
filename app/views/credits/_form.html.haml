-# %h5= "Add Credit to #{@reel.name}"
= form_for [@reel, Credit.new] do |f|
  = render 'shared/error_messages', :object => f.object
  .row
    .col-sm-2
      = f.label :role
    .col-sm-10
      = f.text_field :role
  %br
  .row
    .col-sm-2
      = f.label :email
    .col-sm-10
      = f.text_field :credit_receiver_email
  %br
  = f.submit :add, :class => 'btn btn-default'
