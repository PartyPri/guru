- if params[:credit_invitation].present?
  - if user_signed_in?
    -if @pending_credit.present?
      %p= "Hello #{current_user.first_name}, #{@pending_credit.owner.first_name} would like to credit you with:"
      %h4= @pending_credit.role.upcase
      = button_to("Accept", accept_reel_credit_path(@reel, @pending_credit), method: :put)
      = button_to("Reject", reject_reel_credit_path(@reel, @pending_credit), method: :put)
