- interest = Interest.all
- length = interest.length
.bgc-lt-gray  
  .container.ta-center
    .row
      .col-sm-12.hidden-xs
        %ul.list-inline.p-y-15
          - interest.each_with_index do |interest, x|
            - if x+1 != length
              %li
                %h5
                  = link_to(interest.name, "/interests/#{interest.id}/about")
              %li.divider
            - else
              %li
                %h5
                  = link_to(interest.name, "/interests/#{interest.id}/about")
