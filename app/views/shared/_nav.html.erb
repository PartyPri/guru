<% interest = Interest.all %>
<nav class="navbar" id="nav-menu" role="navigation">
  <div class="container">
  <!-- Brand and toggle get grouped for better mobile display -->
    <div class="row">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle visible-xs p-y-15" data-toggle="collapse" data-target=".navbar-ex1-collapse", style="line-height: 30px;" onclick="navColor('nav-menu')">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar bgc-white"></span>
          <span class="icon-bar bgc-white"></span>
          <span class="icon-bar bgc-white"></span>
        </button>
        <a href="/" class="navbar-brand">
          <%= image_tag "evrystep_logo.svg", height: "30px" %>
        </a>
      </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Evrystep Dance Battle", new_event_registration_path(event_id: 1), :style => "color: yellow;" %></li>
        <li><%#= link_to "Register for Rugby", new_event_registration_path(event_id: 2), :style => "color: yellow;" %></li>
        <% if user_signed_in? %>
          <li><%#= link_to "About", about_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Explore<b class="caret m-left-5"></b></a>
            <ul class="dropdown-menu">
              <% interest.each do |interest| %>
                <li><%= link_to interest.name, "/interests/#{interest.id}" %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle btn btn-primary navbar-new-button" data-toggle="dropdown">
              <span style="display: inline-block; margin-right: 5px;"><%= image_tag "add.svg", height: "20px" %></span>
              <span style="display: inline-block;">New</span>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.reels.length > 0 %>
                <li><%= link_to "Media", new_video_path %></li>
                <li><%= link_to "Story", new_article_path %></li>
              <% else %>
                <li class="disabled">Media</li>
                <li class="disabled">Story</li>
              <% end %>
                <li><%= link_to "Reel", new_reel_path %></li>
            </ul>
          </li>
          
         
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %><b class="caret m-left-5"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "You", user_path(current_user) %></li>
              <!--<li><%#= link_to "Settings", edit_user_path(current_user) %></li>-->
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to "Sign In", user_omniauth_authorize_path(:google_oauth2) %></li>
          <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</nav>
