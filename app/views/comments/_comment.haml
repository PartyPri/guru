%div.comment{ :id => "comment-#{comment.id}" }
	%hr
	- if current_user && current_user.id == comment.user_id || current_user && current_user.id == reel_user
		= link_to "Ã—", comment_path(comment), :method => :delete, :remote => true, :confirm => "Are you sure you want to remove this comment?", :disable_with => "Ã—", :class => 'close', :id => "delete_comment"
	%h4
		= comment.user.first_name
		%small= comment.updated_at
	%p= comment.body
	%p= link_to "Reply", reply_comment_path(comment), :method => :get, :remote => true
%div.replies{ :id => "replies-#{comment.id}" }
	- if !comment.descendants.empty?
		= render :partial => 'comments/reply_comment', :collection => comment.descendants.order('created_at desc'), :as => :comment, :locals => { :reel_user => @user.id }