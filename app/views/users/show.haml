    .container
      .row
        .navbar-header
          %button.navbar-toggle.p-y-15.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#user-page-nav", "data-toggle" => "collapse", "type" => "button"}
            %span.sr-only Toggle navigation
            %i.fa.fa-bars

        .navbar-collapse.collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a.user-page-nav#user-reel-link{:href => "#reels"} Reels
            %li
              %a.user-page-nav#user-entourage-link{:href => "#entourage"} Entourage
            %li
              %a.user-page-nav#user-credits-reel-link{:href => "#credits"} Credits
            %li
              %a.user-page-nav#user-about-link{:href => "#about"} About
            %li
              %a#user-contact-link{:href => "#contact"} Contact
  .user-hero-image{style: "background-image: url(#{@user.cover_photo.url(:medium)});"}
  .content-container.user-page-header
