<%= form_for @user, :html => { :method => :put, :multipart => true, :class => 'form-horizontal' } do |f| %>

  <fieldset>
    <h2 style="text-align: center">Account settings</h2><br>

    <div class="form-group">
      <div class="controls">
        <%= f.label :first_name, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :last_name, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, :class => 'form-control input-lg' %>
        </div>
      </div>
    </div>
    
    <div class="form-group">  
      <div class="controls">
        <%= f.label :location, "Location", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location, :class => 'form-control input-lg' %>
        </div>
      </div>  
    </div>  

    <div class="form-group">  
      <div class="controls">
        <%= f.label :email, :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, :class => 'form-control input-lg' %>
        </div>
      </div>  
    </div>

    <div class="form-actions text-center">
      <%= f.submit "Save changes", :class => 'btn btn-info btn-lg' %>
    </div> 

  </fieldset>
<% end %>

<br>
