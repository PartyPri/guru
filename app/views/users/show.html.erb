<div class="page-header">
  <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
</div>

<div id="interests">
  <h5>Styles</h5>
  <hr>
  <% if @interests %>
    <% @interests.each do |interest| %>
      <%= link_to interest.name, interest_path(interest) %><br>
    <% end %>
  <% end %>
</div>

<div id="workshops">
  <h5>Workshops</h5>
  <hr>
  <% if @workshops %>
    <% @workshops.each do |workshop| %>
      <%= link_to workshop.title, workshop %><br>
    <% end %>
  <% end %>
</div>