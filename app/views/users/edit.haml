.container
  = render 'shared/light_nav'
  .container.p-y-40
    %div{style: "background-color: #f3f3f3; border-radius: 10px; margin: 0 auto; padding: 50px; width: 80%;"}
      .row
        .col-xs-12.text-center#account-settings
          %h1 Account Settings
      .row.p-top-40
        .col-xs-12.col-md-6.col-md-offset-3
          = form_for :user, :html => { :method => :put, :multipart => true } do |f|
            .form-group
              %label{for: "first_name"} First name:
              = f.text_field :first_name, class: "form-control"
            .form-group
              %label{for: "last_name"} Last name:
              = f.text_field :last_name, class: "form-control" 
            .form-group
              %label{for: "location"} Location:
              = f.text_field :location, class: "form-control"
            .form-group
              %label{for: "email"} Email:
              = f.email_field :email, class: "form-control"
            %hr.m-y-20
            .text-center
              = f.submit "Save Changes", class: "button btn btn-info w-100"       

  .container.p-y-40
    %div{style: "background-color: #f3f3f3; border-radius: 10px; margin: 0 auto; padding: 50px; width: 80%;"}
      .row
        .col-xs-12.text-center#account-settings
          %h4 Cancel Account
      .row.p-top-20
        .col-xs-12.col-md-6.col-md-offset-3.text-center
          %span We're sad to see you go. Please give us feedback at info@evrystep.com.
          %hr.m-y-20
            .text-center
              = button_to "Cancel Account", registration_path(@user), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "button btn btn-default w-100"