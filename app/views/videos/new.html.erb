<%= form_for @video, url: videos_path, :html => { :multipart => true, :class => 'well form-horizontal' } do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>

  <fieldset>
    <div style="text-align: center" class="h2 no-top-margin">Upload a Video</div>
    <br>

    <div class="form-group">
      <div class="controls">
        <%= f.label "Choose Reel", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <span class="help-block">Choose a reel for your video:</span>
          <%= f.collection_select(:reel_id, @user.reels.all, :id, :name, :prompt => 'Please select reel') %>          
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :url, "YouTube link", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :url %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="controls">
        <%= f.label :caption, "Caption", :class => 'col-sm-2 h4 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :caption, :class => 'form-control', :type => 'text', :rows => '3', :placeholder => 'Describe your video here' %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Done", :class => 'btn btn-danger btn-lg' %>
    </div>

  </fieldset>
<% end %>