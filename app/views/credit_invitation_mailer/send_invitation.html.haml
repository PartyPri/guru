%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    =stylesheet_link_tag 'emails.scss'
    =stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'
  %body
    %br
    %table
      %thead
        %tr
          %th
            -# Column 1
      %tbody
        %tr
          %td.text-center
            %h2= "Hi #{@receiver.try(:first_name) || @credit.credit_receiver_email},"
            %p
              = "#{@owner.first_name} would like to credit you as a #{@credit.role} in \"#{@reel.name}\" on Evrystep!"
            %p
              =link_to("View Invite", @link_url, :class => "link-button")
            %h4
              %i.fa.fa-heart.red
              %a(href="/")
                = image_tag "http://www.evrystep.com/assets/evrystep_logo-c8f795438d997e6321ede0f6c1e2c6d5.svg", height: "20px", class: "logo"
            %br
            %br
