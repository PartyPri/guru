=render :layout => 'shared/form_layout' do
  .row
    .col-xs-12.text-center#new-story
      %h1 Write a Story
  .row.p-top-40
    .col-xs-12.col-md-6.col-md-offset-3
      = form_for :story, url: stories_path, html: { :multipart => true } do |f|
        .form-group
          %label{for: "reel_select"} Select reel:
          .select-style#reel_select
            = collection_select(:story, :reel_id, current_user.reels.all, :id, :name, required: true, :selected => params[:reel])
        .form-group
          %label{for: "cover"} Add cover photo:
          = f.file_field :photo
        .form-group
          %label{for: "title"} Add title:
          = f.text_field :title, placeholder: 'Your story\'s title', class: "form-control", required: true
        .form-group
          %label{for: "body"} Write story:
          = f.cktext_area :body, placeholder: 'Write anything...', class: "form-control", rows: 2, :ckeditor => {:uiColor => '#e5fcfb'}
          -if @story.errors.any?
            - @story.errors.each do |attr, msg|
              %p.c-red.m-top-10= msg
        %hr.m-y-20
        .text-center
          = f.submit "Save", class: "button btn btn-info w-100"
