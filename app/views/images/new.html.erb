<br><br>
<%= form_for @image, url: images_path, :html => { :multipart => true, :class => 'well form-horizontal' } do |f| %>

  <%= render 'shared/error_messages', :object => f.object %>

  <fieldset>
    <div style="text-align: center" class="h2 no-top-margin">Upload an image</div>

    <div class="form-actions">
      <%= f.submit "Done", :class => 'btn btn-danger btn-lg' %>
    </div>

  </fieldset>
<% end %>