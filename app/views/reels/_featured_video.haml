.grid-container.featured-video-container
  .row-fluid.grid.clearfix
    %a.media-edit.glyphicon.glyphicon-pencil{"data-toggle" => "modal", "data-target" => "#edit-modal", "data-medium" => "#{@featured_video.first.id}"}
    %h1 About this featured artist
    %p= @user.bio
    -if @featured_video.any?
      %iframe{src: "http://www.youtube.com/embed/#{@featured_video.first.uid}", "allowfullscreen" => "true", "frameborder" => "0", "rel" => "0"}

